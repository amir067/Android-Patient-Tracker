<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#ffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_pic_imageView"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:foreground="@drawable/rounded_fg"
                android:gravity="center_vertical"
                android:src="@drawable/defavatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    style="@style/cardview"
                    app:cardUseCompatPadding="true"
                    app:elevation="@dimen/spacing_large">

                    <TextView
                        style="@style/textview"
                        android:text="Username"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_username"
                        style="@style/textview"
                        android:layout_gravity="end" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardview"
                    app:cardUseCompatPadding="true"
                    app:elevation="@dimen/spacing_large">

                    <TextView
                        style="@style/textview"
                        android:text="Email"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_email"
                        style="@style/textview"
                        android:layout_gravity="end" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardview"
                    app:cardUseCompatPadding="true"
                    app:elevation="@dimen/spacing_large">

                    <TextView
                        style="@style/textview"
                        android:text="Phone"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_phone"
                        style="@style/textview"
                        android:layout_gravity="end" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardview"
                    app:cardUseCompatPadding="true"
                    app:elevation="@dimen/spacing_large">

                    <TextView
                        style="@style/textview"
                        android:text="Gender"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/profile_gender"
                        style="@style/textview"
                        android:layout_gravity="end" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_border_buttonorange"
                        android:fontFamily="@font/montebold"
                        android:onClick="onLogoutClick"
                        android:padding="5dp"
                        android:text="@string/log_out"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_border_buttonorange"
                        android:fontFamily="@font/montebold"
                        android:onClick="onEditProfileClick"
                        android:padding="5dp"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edge_border"
                android:elevation="10dp"
                app:srcCompat="@drawable/gradient_icon_transparent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="?android:attr/textColorTertiaryInverse"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="#03A9F4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/monts3"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="#FCFDFD"
                        android:textSize="26dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </FrameLayout>

</LinearLayout>
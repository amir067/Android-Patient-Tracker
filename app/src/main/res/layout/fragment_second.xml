<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#581F6F"
    android:orientation="vertical"
    tools:context=".Fragments.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_clk"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_previous" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="back"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Edit habit style"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_noun_edit" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_event_note_24" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_circle"
                    android:cropToPadding="false"
                    android:padding="50dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/art_walk" />

                <TextView
                    android:id="@+id/txt_walk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="WALK/RUN"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="5000 STEPS"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="#72A750CA" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="GOALS"
                    android:textColor="#B9FFFFFF" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Walk 5000 steps"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.shawnlin.numberpicker.sample.MainActivity">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="steps"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:np_dividerColor="#9C27B0"
                    app:np_order="ascending"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="26dp"
                    app:np_selectedTypeface="@string/roboto_light"
                    app:np_textColor="#D998F3"
                    app:np_textSize="26dp"
                    app:np_typeface="@string/roboto_light"
                    tools:np_max="5000"
                    tools:np_min="1000" />

                <TextView
                    android:id="@+id/textView78"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Walk"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />


            </LinearLayout>

            <View
                android:id="@+id/view23"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#72A750CA" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TASK DAYS"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Time/Week"
                    android:textColor="#BFFFFFFF" />

            </LinearLayout>

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/group_weekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:theme="@style/AppTheme"
                app:tbgChildSpacing="auto">

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/sun"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="S"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/mon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="M"
                    android:textColor="#A750CA"
                    android:textSize="36sp"
                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/tue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="T"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/wed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="W"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/thu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="T"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/fri"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="F"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/sat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="36sp"
                    android:text="S"
                    android:textColor="#A750CA"

                    app:tbgMarkerColor="#FFFFFF" />

            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>


            <View
                android:id="@+id/view73"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#79A750CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="DEVICE NOTIFICATION"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_DN_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="OFF"
                    android:textColor="#FFFFFF" />

              <!--  <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    android:padding="5dp"
                    app:jtbJelly="lazy_tremble_head_fatty"
                    app:jtbLeftBackgroundColor="@android:color/white"
                    app:jtbLeftThumbColor="#751E98"
                    app:jtbMoveToSameStateCallListener="false"
                    app:jtbRightBackgroundColor="#751E98"
                    app:jtbRightThumbColor="#751E98" />  -->

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/SW_DN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="false"
                    android:padding="5dp"
                    android:requiresFadingEdge="horizontal"
                    android:soundEffectsEnabled="true"
                    android:textSize="24sp"
                    android:thumb="@drawable/custom_switch_thumb"
                    app:showText="false"
                    app:splitTrack="false"
                    app:track="@drawable/custom_switch_track"
                    tools:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="PUSH NOTIFICATION"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_PN_Sw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="OFF"

                    android:textColor="#FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/SW_PN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="false"
                    android:padding="5dp"
                    android:requiresFadingEdge="horizontal"
                    android:soundEffectsEnabled="true"
                    android:textSize="24sp"
                    android:thumb="@drawable/custom_switch_thumb"
                    app:showText="false"
                    app:splitTrack="false"
                    app:track="@drawable/custom_switch_track"
                    tools:checked="true" />

            </LinearLayout>

            <View
                android:id="@+id/vieew"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#72A750CA" />


            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="NOTIFICATION TIME"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView623"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="First Notification"
                        android:textColor="#BF5AE8"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/time_1st_notificatio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="11:15 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/textView323"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Vibration &amp; Push Notification"
                        android:textColor="#BF5AE8"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_first_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fitsSystemWindows="false"
                        android:padding="5dp"
                        android:requiresFadingEdge="horizontal"
                        android:soundEffectsEnabled="true"
                        android:textSize="24sp"
                        android:thumb="@drawable/custom_switch_thumb"
                        app:showText="false"
                        app:splitTrack="false"
                        app:track="@drawable/custom_switch_track"
                        tools:checked="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_vibrate1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_vibration_24" />

                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_ringer1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_volume_up_24" />

                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_flash1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_flash_on_24" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6523"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Second Notification"
                        android:textColor="#BF5AE8"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/time_2end_notificatio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="16:18 PM"
                        android:textColor="#FFFFFF"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/textView223"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Vibration &amp; Push Notification"
                        android:textColor="#BF5AE8"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_second_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="false"
                        android:padding="5dp"
                        android:layout_gravity="right"
                        android:requiresFadingEdge="horizontal"
                        android:soundEffectsEnabled="true"
                        android:textSize="24sp"
                        android:thumb="@drawable/custom_switch_thumb"
                        app:showText="false"
                        app:splitTrack="false"
                        app:track="@drawable/custom_switch_track"
                        tools:checked="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_vibrate2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_vibration_24" />

                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_ringer2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_volume_up_24" />

                        <com.github.zagum.switchicon.SwitchIconView
                            android:id="@+id/btn_flash2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            app:si_disabled_alpha=".5"
                            app:si_disabled_color="#dadada"
                            app:si_enabled="false"
                            app:si_no_dash="true"
                            app:si_tint_color="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_flash_on_24" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="Save Task"
                android:textAllCaps="false"

                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>